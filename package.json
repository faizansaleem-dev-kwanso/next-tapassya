{
  "name": "admin-dashboard",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "netlify": "netlify dev -p 3000",
    "build": "next build && npm run postbuild",
    "postbuild": "next-on-netlify",
    "postinstall": "next build && rm -rf production-server/",
    "start": "node production-server/server/app.js",
    "lint": "eslint . --ext .ts,.tsx",
    "test": "jest --coverage --passWithNoTests",
    "processes-3000": "ss -lptn 'sport = :3000'",
    "processes-node": "ps -e|grep node",
    "kill-processes-at-port": "lsof -i tcp:3000 | awk 'NR!=1 {print $2}' | xargs kill",
    "docker:build": "npm run lint && npm run test && docker image build . -t idesk-app:latest",
    "docker:run": "npm run docker:clean && npm run docker:runHelper",
    "docker:runHelper": "docker run --name idesk-app-latest --env-file .env -d -p 8000:8000 idesk-app:latest",
    "docker:clean": "docker rm -f idesk-app-latest || true",
    "docker:taillogs": "docker logs -f idesk-app-latest",
    "docker:debug": "npm run docker:build && npm run docker:run && npm run docker:taillogs"
  },
  "jest": {
    "coverageDirectory": "./.coverage"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^1.2.36",
    "@fortawesome/free-solid-svg-icons": "^5.15.4",
    "@fortawesome/react-fontawesome": "^0.1.15",
    "@stripe/stripe-js": "^1.17.1",
    "@types/socket.io-client": "^1.4.32",
    "@zeit/next-css": "^1.0.1",
    "@zeit/next-less": "^1.0.1",
    "@zeit/next-sass": "^1.0.1",
    "antd": "^4.16.13",
    "babel-plugin-import": "^1.13.3",
    "cookie": "^0.4.1",
    "dotenv": "^10.0.0",
    "mobx": "^6.3.2",
    "mobx-react": "^7.2.0",
    "netlify": "^8.0.0",
    "netlify-cli": "^6.7.5",
    "next": "11.1.0",
    "next-compose-plugins": "^2.2.1",
    "next-on-netlify": "^3.0.1",
    "nookies": "^2.5.2",
    "nprogress": "^0.2.0",
    "pluralize": "^8.0.0",
    "project-name-generator": "^2.1.9",
    "raw-loader": "^4.0.2",
    "react": "17.0.2",
    "react-copy-to-clipboard": "^5.0.4",
    "react-dom": "17.0.2",
    "react-image-crop": "^8.6.6",
    "sass": "^1.38.1",
    "socket.io-client": "^2.2.0",
    "swr": "^0.5.6",
    "webpack": "^4.46.0"
  },
  "devDependencies": {
    "@types/react": "17.0.19",
    "@types/react-image-crop": "^8.1.2",
    "@typescript-eslint/eslint-plugin": "^4.29.3",
    "@typescript-eslint/parser": "^4.29.3",
    "eslint": "^7.32.0",
    "eslint-config-next": "11.1.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.1",
    "eslint-plugin-react": "^7.24.0",
    "less": "^3.13.1",
    "prettier": "^2.3.2",
    "typescript": "4.3.5"
  }
}
